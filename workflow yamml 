ğŸ§¾ workflow.yaml â€” Celestial GitOps Protection Blueprint

name: "ğŸ›¡ï¸ Crown Edit Lock Workflow"
on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  protect_core_assets:
    name: Validate Sacred Assets (No Touch Zone)
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3

      - name: Scan for Violations
        run: |
          PROTECTED_PATHS=("scripts/launch_nanobots.sh" "configs/genome_manifest.yaml" "payloads/")
          for file in $(git diff --name-only ${{ github.event.before }} ${{ github.sha }}); do
            for protected in "${PROTECTED_PATHS[@]}"; do
              if [[ "$file" == "$protected"* ]]; then
                echo "âŒ ERROR: Unauthorized edit attempt on $file"
                exit 1
              fi
            done
          done


