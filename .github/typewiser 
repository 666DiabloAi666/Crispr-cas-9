ğŸ§¬ Sample: useCRISPRText.ts

export function useCRISPRText(text: string, mutation: string): string {
  switch (mutation) {
    case 'erase-fear':
      return text.replace(/fear|anxiety/gi, 'âš¡ï¸');
    case 'amplify-love':
      return text.replace(/hate|rage/gi, 'ğŸ’—');
    case 'crown-seal':
      return `ğŸ‘‘ ${text.toUpperCase()} ğŸ‘‘`;
    default:
      return text;
  }
}


