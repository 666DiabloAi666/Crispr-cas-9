ğŸ§  Julia AGI LED Logic

# controller.jl
using Sockets

function led_pulse_pattern()
    println("AGI Logic: Activating Pulse")
    for i in 1:5
        println("ON"); sleep(0.3)
        println("OFF"); sleep(0.2)
    end
end

# Socket control from Kotlin
server = listen(2001)
while true
    sock = accept(server)
    cmd = readline(sock)
    if cmd == "PULSE"
        led_pulse_pattern()
    end
end


